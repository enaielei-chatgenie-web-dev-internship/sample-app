<%
    view ||= false
    delete ||= false

    controls = []

    controls.append(link_to("View", user)) if view
    controls.append(link_to(
        "Delete", delete_user_path(user), data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure you want to delete this user?'
    })) if delete

    scontrols = controls.join(" | ")
%>
<div class="item">
    <%= get_profile_image(user, class: "ui mini circular image") %>
    <div class="content">
        <div class="ui sub header"><%= user.name %></div>
        <% if controls.any?() %>
            <%= raw(scontrols) %>
        <% end %>
    </div>
</div>